<h1>Group</h1>

<div class="overallAdd">

<form action="/groups" method="POST">

  <label for="name">Groupname:</label>
  <input class="add" type="text" name="name" id="name">


  <select name="user" multiple>
    {{#each users }}
    <option class="add" value="{{_id}}">{{username}}</option>
    {{/each}}

  </select>

  {{!-- <label for="event">Event:</label>
  <input type="text" name="event" id="event"> --}}

  <label for="date">Date:</label>
  <input class="add" type="date" name="date" id="date">

  <button class="voteSubmit" type="submit">Add a group</button>
</form>

</div>